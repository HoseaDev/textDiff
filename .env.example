# TextDiff Docker环境变量配置
# 复制此文件为 .env 并根据实际情况修改

# ========== 应用配置 ==========
APP_NAME=TextDiff
APP_VERSION=1.0.0
DEBUG=False

# ========== 数据库配置 ==========
# MySQL配置
MYSQL_ROOT_PASSWORD=rootpassword_change_this
MYSQL_DATABASE=textdiff
MYSQL_USER=textdiff
MYSQL_PASSWORD=textdiff123_change_this

# ========== 后端配置 ==========
# JWT密钥 (生产环境必须修改！使用: openssl rand -hex 32)
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ========== 端口配置 ==========
# 如果默认端口被占用，可以修改这些配置
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
BACKEND_PORT=8000
MYSQL_PORT=3306

# ========== 开发环境配置 ==========
# 开发环境前端端口
FRONTEND_DEV_PORT=5173
